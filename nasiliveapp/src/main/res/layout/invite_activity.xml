<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_yaoqing">

    
    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_53"
        android:src="@mipmap/tittle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_32"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_title"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/shape_corner_white2"
        >


        <ImageView
            android:id="@+id/iv_invite"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/ic_mingxi"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/iv_income"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/ic_shouyi_2"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/iv_invite"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#7E32FC"
            android:layout_centerHorizontal="true"
            android:text="30"
            android:layout_marginTop="@dimen/dp_45"
            />


        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#7E32FC"
            android:layout_centerHorizontal="true"
            android:text="可提供金额(元)"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/tv_coin"
            />


        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/shape_corner_purple"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#FFF"

            android:layout_centerHorizontal="true"
            android:text="立即邀请"

            android:layout_marginTop="@dimen/dp_36"
            android:layout_below="@id/tv_1"
            />

        <TextView
            android:id="@+id/tv_withdrawal"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/shape_corner_purple2"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#9D64FF"
            android:layout_centerHorizontal="true"
            android:text="立即提现"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_below="@id/tv_invite"
            />



        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_withdrawal"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请规则"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"

                />
            
            <View
                android:layout_width="@dimen/dp_64"
                android:layout_height="0.5dp"
                android:background="#fff5f5f5"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_2"
                android:layout_marginRight="@dimen/dp_25"
                />
            <View
                android:layout_width="@dimen/dp_64"
                android:layout_height="0.5dp"
                android:background="#fff5f5f5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_2"
                android:layout_marginLeft="@dimen/dp_25"
                />

        </RelativeLayout>



        <TextView
            android:id="@+id/tv_2"
            android:layout_below="@id/rl_1"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:textColor="#B1B1B1"
            android:textSize="12sp"
            android:text="1.所有用户都可以参与邀请计划"
/>
        <TextView
            android:id="@+id/tv_3"
            android:layout_below="@id/tv_2"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:textColor="#B1B1B1"
            android:textSize="12sp"
            android:text="2.通过自己分享的专属“邀请地址”下载钠斯直播app及注册的用户，才算做“我邀请的用户"
            />
        <TextView
            android:id="@+id/tv_4"
            android:layout_below="@id/tv_3"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:textColor="#B1B1B1"
            android:textSize="12sp"
            android:text="3.被邀请的用户充值，可获得分成比例为"
            />
        <TextView
            android:id="@+id/tv_5"
            android:layout_below="@id/tv_4"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:textColor="#B1B1B1"
            android:textSize="12sp"
            android:text="4.分成金额可用于提现或兑换金币"
            />



    </RelativeLayout>

</RelativeLayout>